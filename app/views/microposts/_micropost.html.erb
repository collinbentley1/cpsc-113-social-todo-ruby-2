<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span> <br> 
  <span class="description">
   <b> description:</b> <%= micropost.description %>
  </span>
  <span class="content">
    <b> content: </b><%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
   <span class="collab">
        <b> collaborator 1:</b> <%= micropost.collab1 %> <br>
        <b> collaborator 2:</b> <%= micropost.collab2 %> <br>
        <b> collaborator 3:</b> <%= micropost.collab3 %>

    

  </span>

  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "Delete", micropost, method: :delete %>
       <%= link_to "Complete", micropost, method: :complete %>
    <% end %>



  </span>
</li>